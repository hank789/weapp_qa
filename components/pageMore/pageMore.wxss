.wx-popup {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}
.card-wrapper {
  width: 100%;
  position: absolute;
  bottom: 0;
  z-index: 900;
  background: #FFF;
  border-top-left-radius: 36rpx;
  border-top-right-radius: 36rpx;
}
.card-wrapper .buttonShar {
  width: 100%;
  border: none;
  display: flex;
  padding: 0;
  background: #FFF;
}
.card-wrapper .buttonShar .text {
  line-height: 80rpx;
}
.card-wrapper .buttonShar::after {
  border: none;
}
.card-wrapper .menuList {
  /* line-height: 86rpx; */
  display: flex;
  padding: 30rpx 32rpx;
  position: relative;
}
.card-wrapper .menuList .img {
  width: 88rpx;
  height: 86rpx;
  margin-right: 20rpx;
}
.card-wrapper .menuList .text {
  color: #444444;
  font-size: 28rpx;
  line-height: 84rpx;
}
.card-wrapper .menuList.cancel {
  border-top: 1rpx solid #F2F2F2;
  text-align: center;
  justify-content: center;
}
.card-wrapper .menuList .cancelText {
  text-align: center;
  font-size: 32rpx;
}
.bot {
  left: 32rpx;
  right: 32rpx;
}