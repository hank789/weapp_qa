@import '/iconfont/iconfont.wxss';
.text-line-5 {
    display: -webkit-box;
    overflow: hidden;
    white-space: normal!important;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
}
.line-river-after {
  position: relative;
  height: 1px; /* px不转换 */
  width: 100%; }
.line-river-after:after {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  content: '';
  background-color: #dcdcdc;
  height: 1px; /* px不转换 */
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5); }
.line-river-after-top {
  top: -1px; /* px不转换 */}

