      </view>
      <view class='star' bindtap='fiveStar' data-mark='5'>
        <text wx:if='{{ starNumber < 5 }}' class='iconfont icon-xingxingkongxin starKong'></text>
        <text wx:if='{{ starNumber >=5 }}'  class='iconfont icon-shixinxingxing starShi'></text>
      </view>

