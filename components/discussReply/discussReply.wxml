<view class='page'>

  <view wx:for='{{commentChildren}}' wx:key='commentChildren'>
    <view class='container-list-discuss list-item-discuss-children' >
      <view class="list-item-discuss" >
        <view class="lidL">
          <image src='{{item.owner.avatar}}'></image>
        </view>
        <view class="lidR">
          <view class="lidR1">{{item.owner.name}}<text>回复</text>{{ parentOwnerName }}</view>
          <view class="lidR2 textToLink">{{ item.content }}</view>
          <view class="lidR3">
            <view class="lidRtime">
              <text>{{ item.created_at }}</text>
            </view>
            <view class="lidROption">
              <text class='iconfont icon-zan1'></text>
              <text>{{ item.supports }}</text>
            </view>
          </view>
        </view>
        </view>

      <DiscussReplay commentChildren='{{item.children}}'></DiscussReplay>

    </view>
  </view>

</view>