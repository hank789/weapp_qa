.container-footer {
  position: absolute;
  bottom: 0;
  width: 750rpx;
  min-height: 87rpx;
  background: #FFFFFF;
  z-index: 100;
  overflow: hidden;
  padding-bottom: 10rpx;
}
.footer-wrapper {
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
}
.container-footer::before {
  position: absolute;
  top: 0;
  width: 100%;
  height: 1rpx;
  content: '';
  transform: scaleY(0.5);
  background-color: #DCDCDC;
}
.container-footer .text {
  width: 568rpx;
  line-height: 38rpx;
  max-height: 220rpx;
  border: 1rpx solid #DCDCDC;
  border-radius: 10rpx;
  margin-top: 10rpx;
  padding: 14rpx 20rpx 13rpx;
  color: #444444;
  font-size: 28rpx;
}
.sendText {
  color: #29BCB8;
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  position: absolute;
  bottom: 22rpx;
  right: 32rpx;
}