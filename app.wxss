.post-button {
  position: fixed;
  bottom: 88rpx;
  right: 50rpx;
  width:300rpx;
  line-height:88rpx;
  text-align:center;
  background:#1AAD19;
  color:#fff;
  -webkit-border-radius:100rpx;
  border-radisu:100rpx;
  left:50%;
  margin-left:-150rpx;
  z-index:5;
}
page {
    background-color: #fff;
    color: #333;
    font-size: 12px;
    box-sizing: border-box;
    padding-bottom: 20rpx;
}
.font-family-medium {
  font-family:PingFangSC-Medium;
}
.spot {
  width: 4rpx;
  height: 4rpx;
  position: relative;
  top: -3px;
  display: inline-block;
  border-radius: 100rpx;
  background: #B4B4B6;
  margin: 14rpx 18rpx 0;
}
.text-line-1 {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.text-line-5 {
    display: -webkit-box;
    overflow: hidden;
    white-space: normal!important;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
}
.line-river-big {
  width: 100%;
  height: 20rpx;
  background-color: #f3f4f6;
}
.line-river-after {
  position: relative;
  height: 1px; /* px不转换 */
  width: 100%; }
.line-river-after:after {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  content: '';
  background-color: #dcdcdc;
  height: 1px; /* px不转换 */
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5); }
.line-river-after-top {
  top: -1px; /* px不转换 */}
.bot {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 2rpx;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  background-color: rgb(220, 220, 220);}
.container {
  height:80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
} 
.ellipsis {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1
}
.ellipsis-2 {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2
}
.ellipsis-3 {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3
}
