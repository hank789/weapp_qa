.post-button {
  position: fixed;
  bottom: 88rpx;
  right: 50rpx;
  width:300rpx;
  line-height:88rpx;
  text-align:center;
  background:#1AAD19;
  color:#fff;
  -webkit-border-radius:100rpx;
  border-radisu:100rpx;
  left:50%;
  margin-left:-150rpx;
  z-index:5;
}
page {
    background-color: #f2f2f2;
    color: #333;
    font-size: 12px;
    box-sizing: border-box
}
.container {
  height:80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
} 
.ellipsis {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1
}
.ellipsis-2 {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2
}
.ellipsis-3 {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3
}
.weui-loadmore__tips_in-line {
  background-color: #f2f2f2
}
.weui-loadmore {
  background-color: #fff;
  width: 100%;
  margin: 0 auto;
  padding: 10px;
  -webkit-box-sizing: border-box;
}
.touch-active:active {
