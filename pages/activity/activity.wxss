.page {
  padding-bottom: 107rpx;
}
.currencyWrapper {
  position: relative;
  padding: 0 72rpx 3rpx;
}
.currencyTitle {
  color: #444444;
  font-size: 30rpx;
  line-height: 42rpx;
  text-align: center;
  margin-top: 30rpx;
}
.currencyText {
  color: #808080;
  font-size: 26rpx;
  line-height: 37rpx;
}
.activityTime .currencyText {
  text-align: center;
  margin-bottom: 35px;
  margin-top: 20rpx;
}
.activityRule .ruleList, .activityStep .ruleList {
  margin-top: 10rpx;
  margin-bottom: 33rpx;
}
.activityRule .ruleList .rule .spot {
  width: 8rpx;
  height: 8rpx;
  background: #03aef9;
}
.activityRule .ruleList .rule .currencyText, .activityStep .ruleList .rule .currencyText {
  display: inline-block;
  line-height: 58rpx
}
.activityStep .ruleList .rule .number {
  color: #B4B4B6;
  font-size: 26rpx;
  margin-right: 12rpx;
} 

.contactWrapper {
  padding-left: 72rpx;
  margin-top: 30rpx;
}
.contactWrapper .contactText {
  font-size: 22rpx;
  color: #C8C8C8;
  display: flex;
}
.contactWrapper .contactText .word {
  position: relative;
  z-index: 1;
}
.contactWrapper .contactText button {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #03AEF9;
  margin: 2rpx 0 0 -28rpx;
  background: #FFF;
}
.contactWrapper .contactText button::after {
  border: none;
}
.wechatNumbe {
  color: #03AEF9;
  font-size: 26rpx;
}

.takePart {
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #FFFFFF;
  z-index: 10;
}
.takePart .takePartWrapper {
  /* display: flex; */
  overflow: hidden;
  padding: 8rpx 32rpx;
  background: #FFFFFF;
}
.takePart .takePartWrapper .buttonText {
  width:542rpx;
  height:72rpx;
  line-height: 72rpx;
  text-align: center;
  background: #03AEF9;
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 16rpx;
  float: left;
}
.mycomment {
  width: 100rpx;
  text-align: center;
  float: right;
}
.mycomment .editImg {
  width:34rpx;
  height:35rpx;
  margin: 0 auto;
}
.mycomment .editImg image {
  width: 100%;
  height: 100%;
}