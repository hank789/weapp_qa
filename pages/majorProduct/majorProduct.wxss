.title {
  color: #3C3E44;
  font-size: 40rpx;
  font-family: PingFangSC-Medium;
}
.productDetail {
  padding: 0 32rpx;
  margin-bottom: 60rpx;
}
.productDetail .topInfo {
  /* display: flex; */
  overflow: hidden;
}
.productDetail .topInfo .left {
  width: 148rpx;
  height: 148rpx;
  border: 1rpx solid #ECECEE;
  border-radius: 8rpx;
  float: left;
}
.productDetail .topInfo .left .img {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.productDetail .topInfo .right {
  width: 518rpx;
  margin-left: 17rpx;
  float: right;
}
.productDetail .topInfo .right .name {
  font-size: 40rpx;
  line-height: 56rpx;
}
.productDetail .topInfo .right .score {
  margin-top: 11rpx;
}
.productDetail .topInfo .right .score .text {
  color: #444444;
  font-size: 22rpx;
}
.productDetail .describe {
  margin-top: 15rpx;
  color: #808080;
  font-size: 24rpx;
  line-height: 38rpx;
  letter-spacing: 1rpx;
}

.productWrapper {
  padding: 0 32rpx;
  margin-bottom: 60rpx;
}
.productWrapper .imgWrapper {
  margin-top: 30rpx;
}
.productWrapper .imgWrapper .imgList {}
.productWrapper .imgWrapper .imgList .img {
  width: 686rpx;
  border-radius: 8rpx;
}

.chosenWrapper {
  padding: 0 32rpx;
}
.chosenWrapper .specialWrapper {
  margin-top: 30rpx;
}
.chosenWrapper .specialWrapper .speciaList {
  position: relative;
}
.chosenWrapper .specialWrapper .speciaList .img {
  width: 333rpx;
  height: 159rpx;
  border-radius: 8rpx;
}
.chosenWrapper .specialWrapper .speciaList .mask {
  width: 333rpx;
  height: 159rpx;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 8rpx;
  background: linear-gradient(180deg,rgba(0,0,0,0.1) 0%,rgba(0,0,0,0.9) 100%);
  opacity: 0.77;
}
.chosenWrapper .specialWrapper .speciaList .info {
  width: 303rpx;
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 30rpx;
}
.chosenWrapper .specialWrapper .speciaList .info .top {
  width: 130rpx;
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 1rpx 8rpx;
  border-radius: 8rpx;
  background: #1C2C42;
  text-align: center;
  margin-top: 20rpx;
}
.chosenWrapper .specialWrapper .speciaList .info .name {
  color: #FFFFFF;
  font-size: 26rpx;
  line-height: 37rpx;
  margin-top: 20rpx;
}